# .env.example - Copy this file to .env and fill in your values.
# This file should be in your .gitignore

# --- Database Configuration (for local development) ---
DB_HOST=localhost
DB_USER=usr_teste
DB_PASSWORD=usr_teste_password
DB_NAME=spv_db

# --- Service Ports (for local machine access) ---
POSTGRES_PORT=5432
ADMINER_PORT=8080
API_PORT=8000

# --- Application Configuration ---
